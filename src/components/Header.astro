---
import Logo from "../assets/logo.png";
---

<!-- LOGO (IKKE FIXED – SCROLLER NORMALT) -->
<div class="logo-wrapper">
  <img src={Logo.src} alt="Logo" class="logo" />
</div>

<!-- FIXED HEADER (KUN BURGER + MENU) -->
<header class="main-header">
  <div class="burger" id="burger">
    <div class="burger-line line1"></div>
    <div class="burger-line line2"></div>
    <div class="burger-line line3"></div>
  </div>

  <nav class="menu-panel" id="menu-panel">
    <a href="/">Hjem</a>
    <a href="/kontakt">Kontakt</a>
    <a href="/booking">Booking</a>
    <a href="/om-os">Om os</a>
  </nav>
</header>

<style>
  @font-face {
    font-family: "ArcadeClassic";
    src: url("/fonts/ARCADECLASSIC2.TTF");
  }

  /* === LOGO === */
  .logo-wrapper {
    display: flex;
    justify-content: center;
    margin-top:1rem;
    z-index: 1;
  }

  .logo {
    width: 70px;          /* ✅ mindre logo */
    height: auto;
  }

  /* === HEADER (FIXED BAR) === */
  .main-header {
    position: fixed;
    top: 0;
    right: 0;
    padding: 1.5rem 2rem;
    z-index: 1000;
    background: transparent;
  }

  /* === BURGER === */
  .burger {
    width: 32px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .burger-line {
    width: 100%;
    height: 4px;
    background: white;
    border-radius: 4px;
    transition: 0.3s;
  }

  .burger.active .line1 {
    transform: rotate(45deg) translateY(10px);
  }

  .burger.active .line2 {
    opacity: 0;
  }

  .burger.active .line3 {
    transform: rotate(-45deg) translateY(-10px);
  }

  /* === MENU PANEL === */
  .menu-panel {
    position: fixed;
    top: 0;
    right: 0;
    width: 260px;
    height: 100vh;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(4px);
    padding: 6rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.6rem;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    font-family: "ArcadeClassic";
  }

  .menu-panel.active {
    transform: translateX(0);
  }

  .menu-panel a {
    color: white;
    text-decoration: none;
    letter-spacing: 2px;
    font-size: 1.3rem;
  }

  .menu-panel a:hover {
    color: #ff7bf5;
  }
</style>

<script>
  const burger = document.getElementById("burger");
  const menu = document.getElementById("menu-panel");

  if (burger && menu) {
    burger.addEventListener("click", () => {
      burger.classList.toggle("active");
      menu.classList.toggle("active");
    });
  }
</script>
